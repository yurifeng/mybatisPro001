<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.yuri.maven.dao.PersonMapper">


    <!--插入-->
    <insert id="insertPerson" parameterType="person">
        INSERT INTO PERSON(id,USER_NAME,AGE,MOBILEPHONE)
        VALUES (id=#{id},#{userName},#{age},#{mobilePhone})
    </insert>

    <!--根据id查询-->
    <select id="queryById" parameterType="int" resultType="person" databaseId="mysql">
        SELECT * FROM PERSON WHERE ID=#{id}
    </select>

    <!--查询全部-->
    <select id="queryAll" resultType="person" databaseId="mysql">
        select * from person
    </select>

    <!--更新数据-->
    <update id="updatePerson" parameterType="person">
        UPDATE PERSON SET
        AGE=#{age},
        MOBILEPHONE=#{mobilePhone}
        WHERE user_name=#{userName}
    </update>

    <!--删除记录-->
    <delete id="deletePerson" parameterType="int">
        delete from person where id=#{id}
    </delete>

</mapper>
